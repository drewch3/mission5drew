@{
    ViewData["Title"] = "Surf Lesson Calculator";
    Layout = "_Layout";
}

<h1 class="text-center">Surf Coaching Cost Calculator</h1>

<div class="text-center mt-4">
    <label for="hours">Enter Hours:</label>
    <input type="number" id="hours" min="1" class="form-control w-25 mx-auto" />
    <p class="mt-2">Rate: <strong>$50 per hour</strong></p>

    <button id="calculate" class="btn btn-success mt-2">Calculate Total</button>
    <p class="mt-3">Total Cost: <span id="total" class="fw-bold"></span></p>

    <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
</div>

@section Scripts {
    <script src="~/js/calculator.js"></script>

}